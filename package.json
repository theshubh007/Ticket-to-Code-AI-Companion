{
  "name": "ticket-to-code-ai-companion",
  "displayName": "Ticket to Code Orchestrator",
  "description": "Jira ticket → semantic code search → AI implementation guide",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ticket-to-code-sidebar",
          "title": "Ticket to Code",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "ticket-to-code-sidebar": [
        {
          "type": "webview",
          "id": "ticket-to-code.sidebar",
          "name": "Orchestrator"
        }
      ]
    },
    "commands": [
      {
        "command": "ticket-to-code.resetCredentials",
        "title": "Ticket to Code: Reset Credentials"
      },
      {
        "command": "ticket-to-code.clearIndex",
        "title": "Ticket to Code: Clear Embedding Index"
      }
    ]
  },
  "scripts": {
    "build:extension": "node esbuild.config.mjs",
    "build:webview": "vite build",
    "build": "npm run build:extension && npm run build:webview",
    "watch:extension": "node esbuild.config.mjs --watch",
    "watch:webview": "vite build --watch",
    "dev": "concurrently \"npm run watch:extension\" \"npm run watch:webview\"",
    "vscode:prepublish": "node esbuild.config.mjs --production && vite build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "node ./dist/extension/__tests__/e2e/extension.test.js"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/vscode": "^1.85.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vscode/test-electron": "^2.5.2",
    "concurrently": "^8.0.0",
    "esbuild": "^0.20.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
